<!-- form -->
<form action="/api/user/<%=data._id%>" id="update_user" method="put">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="<%=data.name%>" placeholder="Mark Anto">
        </div>

        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="email" name="email" value="<%=data.email%>" placeholder="example@example.com">
        </div>

        <div class="form-group">
            <label class="text-light">Gender</label>
            <%
                let checkedagenter = data.gender == 'male' ? 'checked' : ""
                let checkedinagenter = data.gender == 'female' ? 'checked' : ""
            %>
            <label><input type="radio" name="gender" <%= checkedagenter %> value="male"> Male</label>
            <label><input type="radio" name="gender" <%= checkedinagenter %> value="female"> Female</label>
        </div>

        <div class="form-group">
            <label class="text-light">Status</label>
            <%
                let checkedactive = data.status == 'active' ? 'checked' : ""
                let checkedinactive = data.status == 'inactive' ? 'checked' : ""
            %>
            <label><input type="radio" name="status" <%= checkedactive %> value="active"> Active</label>
            <label><input type="radio" name="status" <%= checkedinactive %> value="inactive"> Inactive</label>
        </div>

        <div class="form-group">
            <button type="submit" class="btn border-shadow">Submit</button>
            <button type="reset" class="btn border-shadow">Reset</button>
        </div>
    </div>
</form>
