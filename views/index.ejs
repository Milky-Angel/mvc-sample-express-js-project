<!-- /include header -->

    <!-- main -->
    <main id="site-main">
        <div class="container"> 
            <div class="box-nav d-flex justify-content-between">
                <a href="/add" class="border-shadow">
                    <span class="text-gradient">New user <i class="fas fa-user"></i></span>
                </a>
            </div>

            <!-- form -->
            <form action="/" method="post">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
